{
  "mcpServers": {
    "kubernetes": {
      "command": "npx",
      "args": ["-y", "kubernetes-mcp-server@latest"],
      "env": {
        "KUBECONFIG": "${workspaceFolder}/.kube/config"
      }
    },
    "docker": {
      "command": "npx",
      "args": ["-y", "docker-mcp-server@latest"]
    },
    "github": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-github"],
      "env": {
        "GITHUB_TOKEN": "${env:GITHUB_TOKEN}"
      }
    },
    "filesystem": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-filesystem"],
      "env": {
        "ALLOWED_DIRS": "${workspaceFolder}"
      }
    }
  },
  "permissions": {
    "allow": [
      "kubectl get:*",
      "kubectl logs:*",
      "kubectl describe:*",
      "kubectl apply:ricplt,ricxapp",
      "kubectl exec:ricxapp",
      "docker ps:*",
      "docker logs:*",
      "docker build:*",
      "helm list:*",
      "helm install:ricplt,ricxapp",
      "helm upgrade:ricplt,ricxapp"
    ],
    "deny": [
      "kubectl delete:namespace:kube-system",
      "kubectl delete:pv:*",
      "docker rm:*",
      "docker rmi:*"
    ]
  },
  "context": {
    "projectType": "O-RAN RIC Platform",
    "preferredLanguage": "Python",
    "testingFramework": "pytest",
    "cicdPlatform": "GitLab CI",
    "deploymentTarget": "k3s"
  },
  "includeCoAuthoredBy": false
}
