{
  "dashboard": {
    "title": "RC xApp - RAN Control Monitoring",
    "tags": ["oran", "ric", "xapp", "rc"],
    "timezone": "browser",
    "editable": true,
    "graphTooltip": 1,
    "panels": [
      {
        "id": 1,
        "title": "RC xApp 狀態",
        "type": "stat",
        "gridPos": {"x": 0, "y": 0, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "up{app=\"ran-control\"}",
            "refId": "A"
          }
        ],
        "options": {
          "reduceOptions": {"values": false, "calcs": ["lastNotNull"]},
          "colorMode": "background"
        },
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {"type": "value", "value": "0", "text": "DOWN", "color": "red"},
              {"type": "value", "value": "1", "text": "RUNNING", "color": "green"}
            ],
            "thresholds": {
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 1, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "活躍 UE 數",
        "type": "stat",
        "gridPos": {"x": 6, "y": 0, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "rc_active_ues",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"value": 0, "color": "blue"},
                {"value": 10, "color": "green"},
                {"value": 50, "color": "yellow"}
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "title": "E2 連接數",
        "type": "stat",
        "gridPos": {"x": 12, "y": 0, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "rc_e2_connections",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 1, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "控制動作成功率",
        "type": "gauge",
        "gridPos": {"x": 18, "y": 0, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "(rc_control_actions_success_total / rc_control_actions_sent_total) * 100",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 80, "color": "yellow"},
                {"value": 95, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "title": "控制動作統計（累計）",
        "type": "graph",
        "gridPos": {"x": 0, "y": 4, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "rc_control_actions_sent_total",
            "legendFormat": "已發送",
            "refId": "A"
          },
          {
            "expr": "rc_control_actions_success_total",
            "legendFormat": "成功",
            "refId": "B"
          },
          {
            "expr": "rc_control_actions_failed_total",
            "legendFormat": "失敗",
            "refId": "C"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "次數"},
          {"format": "short"}
        ],
        "legend": {
          "show": true,
          "alignAsTable": true,
          "avg": true,
          "current": true,
          "max": true,
          "values": true
        }
      },
      {
        "id": 6,
        "title": "控制動作速率（每秒）",
        "type": "graph",
        "gridPos": {"x": 12, "y": 4, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "rate(rc_control_actions_sent_total[5m])",
            "legendFormat": "發送速率",
            "refId": "A"
          },
          {
            "expr": "rate(rc_control_actions_success_total[5m])",
            "legendFormat": "成功速率",
            "refId": "B"
          },
          {
            "expr": "rate(rc_control_actions_failed_total[5m])",
            "legendFormat": "失敗速率",
            "refId": "C"
          }
        ],
        "yaxes": [
          {"format": "ops", "label": "每秒動作數"},
          {"format": "short"}
        ],
        "legend": {
          "show": true,
          "alignAsTable": true,
          "avg": true,
          "current": true,
          "max": true,
          "values": true
        }
      },
      {
        "id": 7,
        "title": "控制動作延遲",
        "type": "graph",
        "gridPos": {"x": 0, "y": 12, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.5, rate(rc_control_latency_seconds_bucket[5m]))",
            "legendFormat": "P50",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, rate(rc_control_latency_seconds_bucket[5m]))",
            "legendFormat": "P95",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.99, rate(rc_control_latency_seconds_bucket[5m]))",
            "legendFormat": "P99",
            "refId": "C"
          }
        ],
        "yaxes": [
          {"format": "s", "label": "延遲 (秒)"},
          {"format": "short"}
        ],
        "legend": {
          "show": true,
          "alignAsTable": true,
          "avg": true,
          "current": true,
          "max": true,
          "values": true
        }
      },
      {
        "id": 8,
        "title": "E2 訊息統計",
        "type": "graph",
        "gridPos": {"x": 12, "y": 12, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "rate(rc_e2_messages_sent_total[5m])",
            "legendFormat": "已發送",
            "refId": "A"
          },
          {
            "expr": "rate(rc_e2_messages_received_total[5m])",
            "legendFormat": "已接收",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "ops", "label": "每秒訊息數"},
          {"format": "short"}
        ]
      },
      {
        "id": 9,
        "title": "資源使用 - CPU",
        "type": "graph",
        "gridPos": {"x": 0, "y": 20, "w": 12, "h": 6},
        "targets": [
          {
            "expr": "rate(process_cpu_seconds_total{app=\"ran-control\"}[5m]) * 100",
            "legendFormat": "CPU 使用率",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "percent", "label": "CPU (%)"},
          {"format": "short"}
        ]
      },
      {
        "id": 10,
        "title": "資源使用 - 記憶體",
        "type": "graph",
        "gridPos": {"x": 12, "y": 20, "w": 12, "h": 6},
        "targets": [
          {
            "expr": "process_resident_memory_bytes{app=\"ran-control\"} / 1024 / 1024",
            "legendFormat": "記憶體使用",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "decmbytes", "label": "記憶體 (MB)"},
          {"format": "short"}
        ]
      }
    ],
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["10s", "30s", "1m", "5m", "15m", "30m", "1h"]
    },
    "version": 1
  },
  "overwrite": true
}
