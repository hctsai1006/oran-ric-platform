{
  "dashboard": {
    "title": "Traffic Steering xApp Monitoring",
    "tags": ["oran", "ric", "xapp", "traffic-steering"],
    "timezone": "browser",
    "editable": true,
    "graphTooltip": 1,
    "panels": [
      {
        "id": 1,
        "title": "Traffic Steering 狀態",
        "type": "stat",
        "gridPos": {"x": 0, "y": 0, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "up{app=\"traffic-steering\"}",
            "refId": "A"
          }
        ],
        "options": {
          "reduceOptions": {"values": false, "calcs": ["lastNotNull"]},
          "colorMode": "background"
        },
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {"type": "value", "value": "0", "text": "DOWN", "color": "red"},
              {"type": "value", "value": "1", "text": "RUNNING", "color": "green"}
            ],
            "thresholds": {
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 1, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "活躍 UE 數",
        "type": "stat",
        "gridPos": {"x": 6, "y": 0, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "ts_active_ues",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"value": 0, "color": "blue"},
                {"value": 10, "color": "green"},
                {"value": 50, "color": "yellow"}
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "title": "切換成功率",
        "type": "gauge",
        "gridPos": {"x": 12, "y": 0, "w": 12, "h": 4},
        "targets": [
          {
            "expr": "(ts_handover_triggered_total / ts_handover_decisions_total) * 100",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 70, "color": "yellow"},
                {"value": 90, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "切換決策統計（累計）",
        "type": "graph",
        "gridPos": {"x": 0, "y": 4, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "ts_handover_decisions_total",
            "legendFormat": "決策總數",
            "refId": "A"
          },
          {
            "expr": "ts_handover_triggered_total",
            "legendFormat": "觸發總數",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "次數"},
          {"format": "short"}
        ],
        "legend": {
          "show": true,
          "alignAsTable": true,
          "avg": true,
          "current": true,
          "max": true,
          "values": true
        }
      },
      {
        "id": 5,
        "title": "切換速率（每秒）",
        "type": "graph",
        "gridPos": {"x": 12, "y": 4, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "rate(ts_handover_decisions_total[5m])",
            "legendFormat": "決策速率",
            "refId": "A"
          },
          {
            "expr": "rate(ts_handover_triggered_total[5m])",
            "legendFormat": "觸發速率",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "ops", "label": "每秒決策數"},
          {"format": "short"}
        ],
        "legend": {
          "show": true,
          "alignAsTable": true,
          "avg": true,
          "current": true,
          "max": true,
          "values": true
        }
      },
      {
        "id": 6,
        "title": "UE 吞吐量",
        "type": "graph",
        "gridPos": {"x": 0, "y": 12, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "ts_ue_throughput_bytes / 1024 / 1024",
            "legendFormat": "UE {{ue_id}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "decmbytes", "label": "吞吐量 (MB)"},
          {"format": "short"}
        ]
      },
      {
        "id": 7,
        "title": "Cell 負載分佈",
        "type": "graph",
        "gridPos": {"x": 12, "y": 12, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "ts_cell_load_percent",
            "legendFormat": "Cell {{cell_id}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "percent", "label": "負載 (%)", "min": 0, "max": 100},
          {"format": "short"}
        ]
      },
      {
        "id": 8,
        "title": "最佳化決策延遲",
        "type": "graph",
        "gridPos": {"x": 0, "y": 20, "w": 12, "h": 6},
        "targets": [
          {
            "expr": "histogram_quantile(0.5, rate(ts_optimization_latency_seconds_bucket[5m]))",
            "legendFormat": "P50",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, rate(ts_optimization_latency_seconds_bucket[5m]))",
            "legendFormat": "P95",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.99, rate(ts_optimization_latency_seconds_bucket[5m]))",
            "legendFormat": "P99",
            "refId": "C"
          }
        ],
        "yaxes": [
          {"format": "s", "label": "延遲 (秒)"},
          {"format": "short"}
        ]
      },
      {
        "id": 9,
        "title": "資源使用 - CPU & 記憶體",
        "type": "graph",
        "gridPos": {"x": 12, "y": 20, "w": 12, "h": 6},
        "targets": [
          {
            "expr": "rate(process_cpu_seconds_total{app=\"traffic-steering\"}[5m]) * 100",
            "legendFormat": "CPU (%)",
            "refId": "A"
          },
          {
            "expr": "process_resident_memory_bytes{app=\"traffic-steering\"} / 1024 / 1024",
            "legendFormat": "記憶體 (MB)",
            "refId": "B",
            "yAxisIndex": 1
          }
        ],
        "yaxes": [
          {"format": "percent", "label": "CPU (%)"},
          {"format": "decmbytes", "label": "記憶體 (MB)"}
        ]
      }
    ],
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["10s", "30s", "1m", "5m", "15m", "30m", "1h"]
    },
    "version": 1
  },
  "overwrite": true
}
