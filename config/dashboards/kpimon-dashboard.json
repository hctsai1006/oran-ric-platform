{
  "dashboard": {
    "title": "KPIMON xApp Monitoring",
    "tags": ["oran", "ric", "xapp", "kpimon"],
    "timezone": "browser",
    "editable": true,
    "graphTooltip": 1,
    "panels": [
      {
        "id": 1,
        "title": "KPIMON 狀態",
        "type": "stat",
        "gridPos": {"x": 0, "y": 0, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "up{app=\"kpimon\"}",
            "refId": "A"
          }
        ],
        "options": {
          "reduceOptions": {"values": false, "calcs": ["lastNotNull"]},
          "colorMode": "background"
        },
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {"type": "value", "value": "0", "text": "DOWN", "color": "red"},
              {"type": "value", "value": "1", "text": "RUNNING", "color": "green"}
            ],
            "thresholds": {
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 1, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "活躍 UE 數",
        "type": "stat",
        "gridPos": {"x": 6, "y": 0, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "kpimon_active_ues",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"value": 0, "color": "blue"},
                {"value": 10, "color": "green"},
                {"value": 50, "color": "yellow"}
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "title": "PRB 使用率",
        "type": "gauge",
        "gridPos": {"x": 12, "y": 0, "w": 12, "h": 4},
        "targets": [
          {
            "expr": "kpimon_prb_usage_percent",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 70, "color": "yellow"},
                {"value": 90, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "網路吞吐量（下行/上行）",
        "type": "graph",
        "gridPos": {"x": 0, "y": 4, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "kpimon_throughput_dl_mbps",
            "legendFormat": "下行 (DL)",
            "refId": "A"
          },
          {
            "expr": "kpimon_throughput_ul_mbps",
            "legendFormat": "上行 (UL)",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "Mbits", "label": "吞吐量 (Mbps)"},
          {"format": "short"}
        ],
        "legend": {
          "show": true,
          "alignAsTable": true,
          "avg": true,
          "current": true,
          "max": true,
          "values": true
        }
      },
      {
        "id": 5,
        "title": "PRB 使用率趨勢",
        "type": "graph",
        "gridPos": {"x": 12, "y": 4, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "kpimon_prb_usage_percent",
            "legendFormat": "PRB 使用率",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "percent", "label": "使用率 (%)", "min": 0, "max": 100},
          {"format": "short"}
        ],
        "legend": {
          "show": true,
          "alignAsTable": true,
          "avg": true,
          "current": true,
          "max": true,
          "values": true
        }
      },
      {
        "id": 6,
        "title": "吞吐量速率（每秒變化）",
        "type": "graph",
        "gridPos": {"x": 0, "y": 12, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "rate(kpimon_throughput_dl_mbps[5m])",
            "legendFormat": "下行速率變化",
            "refId": "A"
          },
          {
            "expr": "rate(kpimon_throughput_ul_mbps[5m])",
            "legendFormat": "上行速率變化",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "Mbits", "label": "速率變化 (Mbps/s)"},
          {"format": "short"}
        ]
      },
      {
        "id": 7,
        "title": "Cell KPI 統計",
        "type": "graph",
        "gridPos": {"x": 12, "y": 12, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "kpimon_cell_throughput_mbps",
            "legendFormat": "Cell {{cell_id}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "Mbits", "label": "吞吐量 (Mbps)"},
          {"format": "short"}
        ]
      },
      {
        "id": 8,
        "title": "E2 訊息統計",
        "type": "graph",
        "gridPos": {"x": 0, "y": 20, "w": 12, "h": 6},
        "targets": [
          {
            "expr": "rate(kpimon_e2_messages_received_total[5m])",
            "legendFormat": "已接收",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "ops", "label": "每秒訊息數"},
          {"format": "short"}
        ]
      },
      {
        "id": 9,
        "title": "資源使用 - CPU & 記憶體",
        "type": "graph",
        "gridPos": {"x": 12, "y": 20, "w": 12, "h": 6},
        "targets": [
          {
            "expr": "rate(process_cpu_seconds_total{app=\"kpimon\"}[5m]) * 100",
            "legendFormat": "CPU (%)",
            "refId": "A"
          },
          {
            "expr": "process_resident_memory_bytes{app=\"kpimon\"} / 1024 / 1024",
            "legendFormat": "記憶體 (MB)",
            "refId": "B",
            "yAxisIndex": 1
          }
        ],
        "yaxes": [
          {"format": "percent", "label": "CPU (%)"},
          {"format": "decmbytes", "label": "記憶體 (MB)"}
        ]
      }
    ],
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["10s", "30s", "1m", "5m", "15m", "30m", "1h"]
    },
    "version": 1
  },
  "overwrite": true
}
