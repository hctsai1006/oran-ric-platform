      {
        "id": 5,
        "type": "table",
        "title": "RIC Platform Pods Status (ricplt)",
        "gridPos": {
          "x": 0,
          "y": 4,
          "w": 12,
          "h": 10
        },
        "targets": [
          {
            "expr": "kube_pod_status_phase{namespace=\"ricplt\"}",
            "refId": "A",
            "format": "table",
            "instant": true
          }
        ],
        "options": {
          "showHeader": true,
          "sortBy": [
            {
              "displayName": "pod",
              "desc": false
            }
          ]
        },
        "fieldConfig": {
          "defaults": {},
          "overrides": [
            {
              "matcher": {
                "id": "byName",
                "options": "phase"
              },
              "properties": [
                {
                  "id": "custom.cellOptions",
                  "value": {
                    "type": "color-background"
                  }
                },
                {
                  "id": "mappings",
                  "value": [
                    {
                      "type": "value",
                      "options": {
                        "Running": {
                          "text": "Running",
                          "color": "green"
                        },
                        "Pending": {
                          "text": "Pending",
                          "color": "yellow"
                        },
                        "Failed": {
                          "text": "Failed",
                          "color": "red"
                        },
                        "Succeeded": {
                          "text": "Succeeded",
                          "color": "blue"
                        }
                      }
                    }
                  ]
                }
              ]
            },
            {
              "matcher": {
                "id": "byName",
                "options": "Value"
              },
              "properties": [
                {
                  "id": "custom.hidden",
                  "value": true
                }
              ]
            }
          ]
        },
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {
                "Time": true,
                "__name__": true,
                "instance": true,
                "job": true,
                "namespace": true,
                "uid": true
              },
              "indexByName": {},
              "renameByName": {
                "pod": "Pod Name",
                "phase": "Status"
              }
            }
          }
        ]
      },
